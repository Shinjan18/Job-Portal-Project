# API Configuration
# For local development
VITE_API_BASE=http://localhost:5000/api

# For production (Vercel)
# VITE_API_BASE=https://your-production-api-url.com/api

# App Configuration
VITE_APP_NAME=Job Portal
VITE_DEFAULT_PAGE_SIZE=10
VITE_APP_ENV=development

# Authentication
VITE_JWT_SECRET=your-jwt-secret-key
VITE_TOKEN_EXPIRES_IN=7d

# API Endpoints (auto-prefixed with VITE_API_BASE)
VITE_API_JOBS=/jobs
VITE_API_AUTH=/auth
VITE_API_APPLICATIONS=/applications
VITE_API_COMPANIES=/companies

# File Uploads
VITE_MAX_FILE_SIZE=10485760 # 10MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAINTENANCE=false

# External Services
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
